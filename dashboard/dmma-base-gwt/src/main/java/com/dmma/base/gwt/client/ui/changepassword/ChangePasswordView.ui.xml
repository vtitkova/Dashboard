<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field='img' type='com.dmma.base.gwt.client.img.BaseImages' />
	<ui:with field='msg' type='com.dmma.base.gwt.client.i18n.BaseMessages' />
	<ui:style type='com.dmma.base.gwt.client.css.BaseCss' src='../../css/BaseCss.css' />
		
	<g:HTMLPanel>
		<table>
			<tr class="{style.tableHeader}">
				<td class="{style.baseLoadingImage}" colspan="2">
					<g:HTML text="{msg.changePasswordTile}" />
				</td>
			</tr>
			<tr>
				<td>
					<g:HTML text="{msg.currentPassword}" />
				</td>
				<td>
					<g:PasswordTextBox ui:field="currentPassword"/>
				</td>
			</tr>
			<tr>
				<td>
					<g:HTML text="{msg.newPassword}"/>
				</td>
				<td>
					<g:PasswordTextBox ui:field="newPassword"/>
				</td>
			</tr>
			<tr>
				<td>
					<g:HTML text="{msg.repeatPasswors}"></g:HTML>
				</td>
				<td>
					<g:PasswordTextBox ui:field="repPassword"/>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<g:Button ui:field="updateButton" text="{msg.update}" />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>
